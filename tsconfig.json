{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@daos/*": [
        "src/typescript/daos/*"
      ],
      "@config/*": [
        "src/typescript/config/*"
      ],
      "@logging/*": [
        "src/typescript/config/logging/*"
      ],
      "@controller/*": [
        "src/typescript/controller/*"
      ],
      "@controllerAll": [
        "src/typescript/controller"
      ],
      "@server/*": [
        "src/typescript/server/*"
      ],
      "@entities/*": [
        "src/typescript/entities/*"
      ],
      "@bean/*": [
        "src/typescript/bean/*"
      ],
      "@error/*": [
        "src/typescript/error/*"
      ],
      "@services/*": [
        "src/typescript/services/*"
      ],
      "@routes/*": [
        "src/typescript/routes"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/public/"
  ]
}
